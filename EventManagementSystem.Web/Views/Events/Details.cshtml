@model EventManagementSystem.Core.Entities.Event

@{
    ViewData["Title"] = "Event Details";
}

<h1>@Model.Name</h1>

<div>
    <h4>Event Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Date and Time</dt>
        <dd class="col-sm-10">@Model.DateAndTime.ToString("g")</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Maximum Attendees</dt>
        <dd class="col-sm-10">@Model.MaxAttendees</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@(Model.Price.HasValue ? $"{Model.Price:C}" : "Free")</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category</dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-controller="Registrations" asp-action="Register" asp-route-eventId="@Model.Id" class="btn btn-primary">Register for Event</a>
    }
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>