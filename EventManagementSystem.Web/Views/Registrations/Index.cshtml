@model IEnumerable<EventManagementSystem.Core.Entities.Registration>

@{
    ViewData["Title"] = "My Registrations";
}

<h1>My Registrations</h1>

<table class="table">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Event Date</th>
            <th>Registration Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Event.Name</td>
                <td>@item.Event.DateAndTime.ToString("g")</td>
                <td>@item.RegistrationDate.ToString("g")</td>
                <td>
                    @if (item.Event.DateAndTime > DateTime.Now)
                    {
                        <a asp-action="Cancel" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Cancel Registration</a>
                    }
                    <a asp-action="DownloadTicket" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Download Ticket</a>
                </td>
                

            </tr>
        }
    </tbody>
</table>